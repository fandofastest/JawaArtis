<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingEnd="52dp"
        android:paddingRight="40dp">


        <TextView
            android:id="@+id/trackId"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="start|center"
            android:text="1"
            android:textColor="@color/textColorTitle"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="--:--"
            android:textColor="@color/textColorSubTitle" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/textTime"
            android:layout_toLeftOf="@+id/textTime"
            android:layout_toEndOf="@+id/trackId"
            android:layout_toRightOf="@+id/trackId"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:paddingEnd="14dp"
                android:paddingRight="14dp"
                android:text="@string/hello_world"
                android:textColor="@color/textColorTitle"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="start"
                android:maxLines="1"
                android:paddingTop="4dp"
                android:paddingEnd="14dp"
                android:paddingRight="14dp"
                android:text="No Song Found"
                android:textColor="@color/textColorSubTitle"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="start"
                android:maxLines="1"
                android:paddingTop="4dp"
                android:paddingEnd="14dp"
                android:paddingRight="14dp"
                android:text="No Song Found"
                android:textColor="@color/textColorSubTitle"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/albumArtImageView"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/hello_world"
        android:padding="12dp"
        android:src="@drawable/ic_dots_vert_black_24dp"
        android:tint="@color/textColorSubTitle" />


</RelativeLayout>